<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>linux_x64</id>
    <!-- Generates a zip package containing the needed files -->
    <formats>
        <format>tar.gz</format>
    </formats>
	<baseDirectory>ngEO-download-manager</baseDirectory>
	<dependencySets>
	    <dependencySet>
	        <includes>
	            <include>oracle:jre-linux-x64</include>
	        </includes>
	        <useProjectArtifact>true</useProjectArtifact>
	        <outputDirectory>jre</outputDirectory>
	        <unpack>true</unpack>
	    </dependencySet>
	</dependencySets>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>${project.groupId}:download-manager-command-line</include>
                <include>${project.groupId}:download-manager-webapp</include>
			</includes>
			<binaries>
				<outputDirectory>bin</outputDirectory>
				<outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>${project.groupId}:download-manager-core</include>
			</includes>
			<sources>
				<fileSets>
					<fileSet>
						<directory>src/main/resources</directory>
						<outputDirectory>conf</outputDirectory>
						<includes>
							<include>log4j.xml</include>
						</includes>
				 	</fileSet>
					<fileSet>
						<directory>src/main/resources/META-INF</directory>
						<outputDirectory>conf</outputDirectory>
						<includes>
							<include>user-modifiable-settings.properties</include>
							<include>non-user-modifiable-settings.properties</include>
						</includes>
						<filtered>true</filtered>
				 	</fileSet>
				</fileSets>
				<includeModuleDirectory>false</includeModuleDirectory>
			</sources>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>${project.groupId}:download-manager-plugin-*</include>
            </includes>
            <excludes>
                <exclude>${project.groupId}:download-manager-plugin-interface</exclude>
                <exclude>${project.groupId}:download-manager-plugin-development-kit</exclude>
            </excludes>
			<sources>
				<fileSets>
					<fileSet>
						<outputDirectory>conf/plugins</outputDirectory>
						<directory>src/main/resources</directory>
					</fileSet>
				</fileSets>
				<includeModuleDirectory>false</includeModuleDirectory>
			</sources>
			<binaries>
    			<attachmentClassifier>jar-with-dependencies</attachmentClassifier>
				<outputDirectory>plugins</outputDirectory>
				<outputFileNameMapping>${module.artifactId}-${module.version}.${module.extension}</outputFileNameMapping>
				<unpack>false</unpack>
			</binaries>
        </moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>${project.groupId}:download-manager-sso</include>
			</includes>
			<sources>
				<fileSets>
					<fileSet>
		    	        <directory>${project.build.directory}</directory>
		    	        <outputDirectory>conf</outputDirectory>
		    	        <includes>
		    	            <include>download-manager-truststore.jks</include>
		    	        </includes>
	    		    </fileSet>
				</fileSets>
				<includeModuleDirectory>false</includeModuleDirectory>
			</sources>
		</moduleSet>
	</moduleSets>
	<fileSets>
		<fileSet>
			<outputDirectory></outputDirectory>
			<includes>
				<include>download-manager-release-note.txt</include>
				<include>LICENSE.txt</include>
			</includes>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<outputDirectory></outputDirectory>
			<directory>os_files/unix</directory>
			<includes>
				<include>start-dm*.sh</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<outputDirectory></outputDirectory>
			<directory>os_files/unix</directory>
			<includes>
				<include>INSTALLATION_INSTRUCTIONS.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>logs</outputDirectory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>