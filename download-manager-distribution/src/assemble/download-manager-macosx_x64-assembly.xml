<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>macosx_x64</id>
    <!-- Generates a zip package containing the needed files -->
    <formats>
        <format>tar.gz</format>
    </formats>
	<baseDirectory>ngEO-download-manager</baseDirectory>
	<dependencySets>
	    <dependencySet>
	        <includes>
	            <include>oracle:jre-macosx-x64</include>
	        </includes>
	        <useProjectArtifact>true</useProjectArtifact>
	        <outputDirectory>jre</outputDirectory>
	        <unpack>true</unpack>
	    </dependencySet>
	</dependencySets>
	<moduleSets>
		<moduleSet>
			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>
		
			<!-- Now, select which projects to include in this module-set. -->
			<includes>
				<include>${project.groupId}:download-manager-command-line</include>
			</includes>
			<binaries>
				<outputDirectory>bin</outputDirectory>
				<outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet>
			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>
		
			<!-- Now, select which projects to include in this module-set. -->
			<includes>
				<include>${project.groupId}:download-manager-webapp</include>
			</includes>
			<sources>
				<fileSets>
					<fileSet>
		    	        <directory>${project.build.directory}</directory>
		    	        <outputDirectory>bin</outputDirectory>
		    	        <includes>
		    	            <include>download-manager-webapp-jetty-console.war</include>
		    	        </includes>
	    		    </fileSet>
				</fileSets>
				<includeModuleDirectory>false</includeModuleDirectory>
			</sources>
		</moduleSet>
		<moduleSet>
			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>
		
			<!-- Now, select which projects to include in this module-set. -->
			<includes>
				<include>${project.groupId}:download-manager-plugin-generic</include>
				<include>${project.groupId}:download-manager-plugin-mock-sentinel2</include>
			</includes>
			<sources>
				<fileSets>
					<fileSet>
						<outputDirectory>conf/plugins</outputDirectory>
						<directory>src/main/resources</directory>
					</fileSet>
				</fileSets>
				<includeModuleDirectory>false</includeModuleDirectory>
			</sources>
			<binaries>
				<outputDirectory>plugins</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet>
			<!-- Enable access to all projects in the current multimodule build! -->
			<useAllReactorProjects>true</useAllReactorProjects>
		
			<!-- Now, select which projects to include in this module-set. -->
			<includes>
				<include>${project.groupId}:download-manager-sso</include>
			</includes>
			<sources>
				<fileSets>
					<fileSet>
		    	        <directory>${project.build.directory}</directory>
		    	        <outputDirectory>conf</outputDirectory>
		    	        <includes>
		    	            <include>download-manager-truststore.jks</include>
		    	        </includes>
	    		    </fileSet>
				</fileSets>
				<includeModuleDirectory>false</includeModuleDirectory>
			</sources>
		</moduleSet>
	</moduleSets>
	
	<fileSets>
		<fileSet>
			<outputDirectory></outputDirectory>
			<includes>
				<include>download-manager-release-note.txt</include>
				<include>LICENSE.txt</include>
			</includes>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<outputDirectory></outputDirectory>
			<directory>os_files/mac</directory>
			<includes>
				<include>start-dm*.sh</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<outputDirectory></outputDirectory>
			<directory>os_files/mac</directory>
			<includes>
				<include>INSTALLATION_INSTRUCTIONS.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>conf</outputDirectory>
			<directory>src/main/resources</directory>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<outputDirectory>logs</outputDirectory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>