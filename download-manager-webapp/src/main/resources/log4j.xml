<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value=" %d{HH:mm:ss,SSS} %-5p: %c - %m%n" />
		</layout>
	</appender>
	
	<appender name="DownloadManagerLog" class="org.apache.log4j.FileAppender">
        <param name="file" value="${DM_HOME}/logs/download-manager.log" />
        <param name="append" value="true" />
        <layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value=" %d{HH:mm:ss,SSS} %-5p: %c - %m%n" />
        </layout>
    </appender>

	<appender name="productDownloadTerminationLog" class="org.apache.log4j.FileAppender">
        <param name="file" value="${DM_HOME}/logs/productDownloadTermination.log" />
        <param name="append" value="true" />
        <layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%m%n" />
        </layout>
    </appender>
	
	<!-- Application Loggers -->
	<logger name="ProductDownloadTermination">
		<level value="info" />
		<appender-ref ref="productDownloadTerminationLog" />
	</logger>
	
	<logger name="int_.esa.eo.ngeo.dmtu">
		<level value="info" />
	</logger>
	
	<logger name="int_.esa.eo.ngeo.dmtu.jaxb">
		<level value="info" />
	</logger>

	<logger name="int_.esa.eo.ngeo.dmtu.manager">
		<level value="info" />
	</logger>

	<logger name="int_.esa.eo.ngeo.dmtu.monitor">
		<level value="info" />
	</logger>
	
	<logger name="int_.esa.eo.ngeo.dmtu.monitor.dar">
		<level value="info" />
	</logger>

	<logger name="int_.esa.eo.ngeo.dmtu.webserver.builder">
		<level value="info" />
	</logger>

	<logger name="int_.esa.eo.ngeo.dmtu.webserver.service">
		<level value="info" />
	</logger>

	<logger name="int_.esa.eo.ngeo.downloadmanager.plugin">
		<level value="info" />
	</logger>
	
	<logger name="int_.esa.umsso">
		<level value="info" />
	</logger>
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.core">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.beans">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.context">
		<level value="info" />
	</logger>

	<logger name="org.springframework.web">
		<level value="info" />
	</logger>

	<!-- Used for diagnosis of persistence -->
	<logger name="org.hibernate">
		<level value="error" />
	</logger>

	<logger name="org.hibernate.type">
		<level value="error" />
	</logger>
	
	<logger name="org.springframework.security.web.FilterChainProxy">
		<level value="info" />
	</logger>

	<logger name="org.springframework.security">
		<level value="info" />
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="warn" />
		<appender-ref ref="console" />
		<appender-ref ref="DownloadManagerLog" />
	</root>
	
</log4j:configuration>
