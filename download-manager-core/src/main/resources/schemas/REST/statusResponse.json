{
	"title": "REST Interface Status Response",
	"type":"object",
	"javaType":"int_.esa.eo.ngeo.downloadmanager.rest.StatusResponse",
	"description":"Provides details of the visible Data Access Requests",
	"required":true,
	"properties":{
		"dataAccessRequests":{
			"type":"array",
			"items": {
				"type": "object",
				"javaType":"int_.esa.eo.ngeo.downloadmanager.model.DataAccessRequest",
				"description":"A Data Access Request",
				"javaInterfaces": ["java.io.Serializable"],
				"required":true,
				"properties":{
					"uuid":{
						"type":"string",
						"description":"A unique identifier for the Data Access Request.",
						"pattern": "[0-9a-fA-F]{32}",
						"required":true
					},
					"monitoringURL":{
						"type":"string",
						"description":"The originator URL for this DAR. Used to monitor for new products in PULL mode.",
						"required":true
					},
					"lastResponseDate":{
						"type":"object",
						"javaType":"java.sql.Timestamp",
						"description":"The date of the last response received  URL for this DAR. Used to monitor for new products in PULL mode..",
						"required":false
					},
					"monitoringStatus":{
						"type":"object",
						"javaType" : "int_.esa.eo.ngeo.iicd_d_ws._1.MonitoringStatus",
						"required":false
					},
					"visible":{
						"type":"boolean",
						"required":false
					},
					"productList":{
						"type":"array",
						"items": {
							"type":"object",
							"javaType":"int_.esa.eo.ngeo.downloadmanager.model.Product",
							"javaInterfaces": ["java.io.Serializable"],
							"required":false,
							"properties":{
								"completedDownloadPath": {
									"type":"string",
									"description": "The path of the download once it has been completed.",
									"required":false
								},
								"downloadDirectory":{
									"type":"string",
									"description": "This optional field specifies a path in which this product shall be saved. The path is relative to the Download Manager root download directory.",
									"required":false
								},
								"fileSize":{
									"type":"integer",
									"required":false
								},
								"notified":{
									"type":"boolean",
									"required":false
								},
								"numberOfFiles":{
									"type":"integer",
									"required":false
								},
								"overallSize":{
									"type":"integer",
									"required":false
								},
								"productAccessUrl":{
									"type":"string",
									"required":false
								},
								"productName":{
									"type":"string",
									"required":false
								},
								"priority": {
									"type":"object",
									"javaType": "int_.esa.eo.ngeo.downloadmanager.model.Priority",
									"enum" : ["Very High","High","Normal","Low","Very Low"]
								},								
								"startOfActualDownload":{
									"type":"object",
									"javaType":"java.sql.Timestamp",
									"required":false
								},
								"startOfFirstDownloadRequest":{
									"type":"object",
									"javaType":"java.sql.Timestamp",
									"required":false
								},
								"stopOfDownload":{
									"type":"object",
									"javaType":"java.sql.Timestamp",
									"required":false
								},
								"uuid":{
									"type":"string",
									"required":false
								},
								"visible":{
									"type":"boolean",
									"default": true,
									"required":true
								},
								"productProgress":{
									"type":"object",
									"javaType":"int_.esa.eo.ngeo.downloadmanager.model.ProductProgress",
									"javaInterfaces": ["java.io.Serializable"],
									"required":false,
									"properties":{
										"downloadedSize":{
											"type":"integer",
											"required":false
										},
										"message":{
											"type":"string",
											"required":true
										},
										"progressPercentage":{
											"type":"integer",
											"required":false
										},
										"status":{
											"type":"object",
											"javaType": "int_.esa.eo.ngeo.downloadmanager.plugin.EDownloadStatus",
											"enum" : ["NOT_STARTED","IDLE","RUNNING","PAUSED","CANCELLED","IN_ERROR","COMPLETED"]
										}
									},
									"additionalProperties": false
								}
							},
							"additionalProperties": false
						}
					}
				},
				"additionalProperties": false
			}
		}
	},
	"additionalProperties": false
}